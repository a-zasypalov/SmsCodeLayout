<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SmsCodeView">

        <attr name="numberBackground" format="color|reference"/>

        <attr name="titleText" format="string"/>
        <attr name="titleTextColor" format="color|reference"/>
        <attr name="titleTextSize" format="dimension"/>
        <attr name="smsTitleTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
            <flag name="bold_italic" value="3"/>
        </attr>
        <attr name="actionText" format="string"/>
        <attr name="actionTextColor" format="color|reference"/>
        <attr name="actionTextSize" format="dimension"/>
        <attr name="smsActionTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
            <flag name="bold_italic" value="3"/>
        </attr>
        <attr name="buttonStyle" format="reference"/>

    </declare-styleable>
</resources>